
name: Node.js CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest


    steps:
    - name: Checkout of Repo
      uses: actions/checkout@v4
    - name: Use Node.js 16.x
      uses: actions/setup-node@v3
      with:
        node-version: 16.x
        cache: 'npm'
    - name: Install dependancies 
      run:  npm install 
    # - name: Install dependancies Back End
    #   run: cd server && npm install 
    - name: Run Back-End
      run: npm start &
     - name: Run Front-End
      run: npm start &
   
